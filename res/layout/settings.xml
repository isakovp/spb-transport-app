<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:id="@+id/separator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/vehicle_type"
                android:textColor="@android:color/white"/>

        <CheckBox android:id="@+id/vehicle_bus"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:onClick="onVehicleBusChanged"
                  android:text="@string/vehicle_bus"/>
        <CheckBox android:id="@+id/vehicle_trolley"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:onClick="onVehicleTrolleyChanged"
                  android:text="@string/vehicle_trolley"/>
        <CheckBox android:id="@+id/vehicle_tram"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:onClick="onVehicleTramChanged"
                  android:text="@string/vehicle_tram"/>
        <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:id="@+id/separator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/map_type"
                android:textColor="@android:color/white"/>

        <RadioGroup android:id="@+id/map_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
            <RadioButton android:id="@+id/street_view"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:onClick="onMapViewChanged"
                         android:text="@string/street_view"/>
            <RadioButton android:id="@+id/satellite_view"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:onClick="onMapViewChanged"
                         android:text="@string/satellite_view"/>
        </RadioGroup>

        <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:id="@+id/separator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/refresh_period"
                android:textColor="@android:color/white"/>
        <Spinner
                android:id="@+id/sync_period"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/sync_picker"/>


        <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:id="@+id/separator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/my_place"
                android:textColor="@android:color/white"/>
        <TextView
                android:id="@+id/my_place"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"/>


        <TextView
                style="?android:attr/listSeparatorTextViewStyle"
                android:id="@+id/separator"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/info"
                android:textColor="@android:color/white"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="@string/copyright"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="@string/version"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="@string/email"/>

    </LinearLayout>
</ScrollView>